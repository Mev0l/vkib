<Window x:Class="vk1.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Information" Height="250" Width="350">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Username:" FontWeight="Bold"/>
            <TextBlock x:Name="lblUsername"/>
            <TextBlock Text="First Name:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="lblFirstName"/>
            <TextBlock Text="Last Name:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="lblLastName"/>
            <TextBlock Text="Date of Birth:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="lblDateOfBirth"/>
            <TextBlock Text="Marital Status:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="lblMaritalStatus"/>
        </StackPanel>
    </Grid>
</Window>